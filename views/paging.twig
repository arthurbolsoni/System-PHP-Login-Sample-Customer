<ul class="pagination">

{% if content.page > 1 %}
  <li class="page-item"><a class="page-link" href="#">First</a></li>
{% endif %}

{% set range = 2 %}

{% set total_pages = (content.total_rows / content.results_per_page) |round(0, 'ceil') %}

{% set initial_num = content.page - range %}
{% set nexts_limit_num = (content.page + range) + 1%}

{% for x in initial_num..nexts_limit_num if ( x > 0 ) %}
  {% if (x <= total_pages) %}

    {% if (x == content.page) %}
      <li class="page-item active"><a class="page-link" href="{{ content.search_url }}{{x}}">{{x}}</a></li>
    {% else %}
          <li class="page-item"><a class="page-link" href="{{ content.search_url }}{{x}}">{{x}}</a></li>
    {% endif %}

  {% endif %}
{% endfor %}

{% if content.page < total_pages %}
  <li class="page-item"><a class="page-link" href="{{ content.search_url }}{{content.page + 1}}">Last</a></li>
{% endif %}

</ul>